FILE_TYPE=FORM_DEFN VERSION=2
FORM
VARIABLE
PORT 72 15
HEADER "Text Setup"

MESSAGE CANT_DONE 3 "Cannot DONE changes while in interactive command"
MESSAGE CANT_ADD 3 "Cannot add more text entries, maximum reached"

ACTIVEFIELD "width"

TILE HeadingTile
TPANEL 0

TEXT "Text Blk"
TLOC 1 1
OPTIONS CENTER BOLD
FSIZE 4 3
ENDTEXT

TEXT "Width"
TLOC 8 1
OPTIONS CENTER BOLD
FSIZE 6 3
ENDTEXT

TEXT "Height"
TLOC 19 1
OPTIONS CENTER BOLD
FSIZE 6 3
ENDTEXT

TEXT "Line Space"
TLOC 30 1
OPTIONS CENTER BOLD
FSIZE 6 3
ENDTEXT

TEXT "Photo Width"
TLOC 41 1
OPTIONS CENTER BOLD
FSIZE 6 3
ENDTEXT

TEXT "Char Space"
TLOC 52 1
OPTIONS CENTER BOLD
FSIZE 6 3
ENDTEXT

TEXT "Name"
TLOC 63 1
OPTIONS CENTER BOLD
ENDTEXT

ENDTILE

TILE FontsTile
TPANEL 1
TEXT
TLOC 1 0
INFO text_block 2
OPTIONS RIGHT
ENDTEXT

FIELD width
FLOC 6 0
REALFILLIN 8 10
DECIMAL 2
ENDFIELD

FIELD height
FLOC 17 0
REALFILLIN 8 10
DECIMAL 2
ENDFIELD

FIELD line_spacing
FLOC 28 0
REALFILLIN 8 10
DECIMAL 2
ENDFIELD

FIELD photoplot_width
FLOC 39 0
REALFILLIN 8 10
DECIMAL 2
ENDFIELD

FIELD character_spacing
FLOC 50 0
REALFILLIN 8 10
DECIMAL 2
ENDFIELD

FIELD name
FLOC 61 0
STRFILLIN 8 14
ENDFIELD

ENDTILE

TILE ButtonTile
TPANEL 2
FIELD done
FLOC 1 1
MENUBUTTON "Done" 9 3
ENDFIELD

FIELD cancel
FLOC 11 1
MENUBUTTON "Cancel" 9 3
ENDFIELD

FIELD reset
FLOC 22 1
MENUBUTTON "Reset" 9 3
ENDFIELD

FIELD add
FLOC 33 1
MENUBUTTON "Add" 9 3
ENDFIELD

#ifndef TEXT_NOCOMPACT
FIELD compact
FLOC 43 1
MENUBUTTON "Compact" 9 3
ENDFIELD
#endif


FIELD help
FLOC 53 1
MENUBUTTON "Help" 9 3
ENDFIELD

ENDTILE

ENDFORM
